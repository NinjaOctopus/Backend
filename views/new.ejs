<% include ../partials/header %>

<div class="container">
    <h1 style="text-align: center;">Create a new dish</h1>
    <div style="width: 30%; margin: 25px auto">
        <form action="/cookbook" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="name" placeholder="name">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="category" placeholder="category">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" placeholder="image url">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="aptFor" placeholder="aptFor">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="target" placeholder="target">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="foodContents" placeholder="foodContents">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="price" placeholder="price" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                 <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/cookbook">Go back</a>
    </div>
</div>

<% include ../partials/footer %>
