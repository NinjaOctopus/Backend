<% include ../partials/header %>

<div class="container">
    <h1 style="text-align: center;">Edit <%= cookbook.name %></h1>
    <div style="width: 30%; margin: 25px auto">
        <form action="/cookbook/<%= cookbook.id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="cookbook[name]" value="<%= cookbook.name%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="cookbook[category]" value="<%= cookbook.category%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="cookbook[image]" value="<%= cookbook.image%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="cookbook[aptFor]" value="<%= cookbook.aptFor%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="cookbook[target]" value="<%= cookbook.target%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="cookbook[foodContents]" value="<%= cookbook.foodContents%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="cookbook[price]" value="<%= cookbook.price%>" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                 <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/cookbook">Go back</a>
    </div>
</div>

<% include ../partials/footer %>